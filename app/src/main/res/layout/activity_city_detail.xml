<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Name"
        android:textAppearance="?attr/textAppearanceHeadline6" />

    <TextView
        android:id="@+id/cityDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Description"
        android:textAppearance="?attr/textAppearanceBody1" />

    <TextView
        android:id="@+id/whatToDoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What to Do"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_marginTop="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWhatToDo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/whatToEatTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What to Eat"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_marginTop="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWhatToEat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/whereToStayTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where to Stay"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_marginTop="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWhereToStay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
